<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.disease_server_system.mapper.PermissionDao">

    <resultMap type="com.example.disease_server_system.entity.Permission" id="PermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, parent_id, description
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="PermissionMap">
        select
        <include refid="Base_Column_List" />
        from disease_system.permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PermissionMap">
        select
        <include refid="Base_Column_List" />
        from disease_system.permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PermissionMap">
        select
        <include refid="Base_Column_List" />
        from disease_system.permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into disease_system.permission(name, parent_id, description)
        values (#{name}, #{parentId}, #{description})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update disease_system.permission
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from disease_system.permission where id = #{id}
    </delete>

    <!--通过userId找到user对应的权限-->
    <select id="queryByUserId" parameterType="Integer" resultMap="PermissionMap">
        SELECT
        p.*
        FROM
        user AS u
        LEFT JOIN user_role AS ur
        ON u.id=ur.user_id
        LEFT JOIN role AS r
        ON r.id=ur.role_id
        LEFT JOIN role_permission AS rp
        ON r.id=rp.role_id
        LEFT JOIN permission AS p
        ON p.id=rp.permission_id
        WHERE u.id=#{userId,jdbcType=INTEGER}
    </select>

</mapper>