<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.disease_server_system.mapper.LogDao">

    <resultMap type="com.example.disease_server_system.entity.Log" id="LogMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="operation" column="operation" jdbcType="VARCHAR"/>
        <result property="operationTime" column="operation_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, operation, operation_time
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="LogMap">
        select
        <include refid="Base_Column_List" />
        from disease_system.log
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LogMap">
        select
        <include refid="Base_Column_List" />
        from disease_system.log
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LogMap">
        select
        <include refid="Base_Column_List" />
        from disease_system.log
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="operation != null and operation != ''">
                and operation = #{operation}
            </if>
            <if test="operationTime != null">
                and operation_time = #{operationTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into disease_system.log(user_id, operation, operation_time)
        values (#{userId}, #{operation}, #{operationTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update disease_system.log
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="operation != null and operation != ''">
                operation = #{operation},
            </if>
            <if test="operationTime != null">
                operation_time = #{operationTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from disease_system.log where id = #{id}
    </delete>

</mapper>